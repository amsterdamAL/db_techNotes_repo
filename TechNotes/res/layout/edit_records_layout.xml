<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/dateBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:gravity="left"
            android:text="TextView" />

        <TextView
            android:id="@+id/theCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:gravity="right"
            android:text="TextView" />

    </LinearLayout>

    <View
        android:id="@+id/spacer_below_datebox"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#C97221" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/addyLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="address: "
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/addyView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="28sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/orderLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="order: "
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/orderView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/nameLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="csr name: "
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/nameView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/cbrLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="cbr:  "
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cbrView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/trblTnLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TRBL TN:  "
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/trblTnView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="29sp" />
            </LinearLayout>

            <View
                android:id="@+id/spacer_facility"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#C97221" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/facilitySpacer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="facilities: "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/blank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />
            </LinearLayout>

            <EditText
                android:id="@+id/f1View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cfcfcfcf"
                android:gravity="center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/f2View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c5c5c5c5"
                android:gravity="center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/f3View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f4f4"
                android:gravity="center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/f4View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5f5"
                android:gravity="center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cfcfcfcf"
                android:orientation="horizontal"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/f2TermLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/f2TermView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d4d4d4d4"
                android:orientation="horizontal"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/rtLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/rtView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/memoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/spacer_below_memo"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#C97221" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/saveAll"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveIt"
            android:text="Save" />

        <Button
            android:id="@+id/undoAll"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="undoIt"
            android:text="Undo" />
    </LinearLayout>

</LinearLayout>